<?xml version="1.0" encoding="utf-8"?>

<robot name="squarbo" xmlns:xacro="http://ros.org/wiki/xacro" >

  <xacro:property name="x" value="0.5"/>

  <material name="rr_m_green">
    <color rgba="0 1 0 1"/>
  </material>
  <material name="rr_m_green_tp">
    <color rgba="0 1 0 .5"/>
  </material>
  <material name="rr_m_black">
    <color rgba="0 0 0 1"/>
  </material>
  <material name="rr_m_gray_tp">
    <color rgba="0.5 0.5 0.5 .9"/>
  </material>
  <material name="rr_m_gray">
    <color rgba="0.7 0.7 0.7 1"/>
  </material>

  <material name="darker_blue">
    <color rgba="0.5 0.5 1 1"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>
  <material name="blue">
    <color rgba="0.2 0.2 1 1"/>
  </material>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="${x} 0.092 0.042"/>
      </geometry>
      <origin xyz="0 0 0.015"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.092 0.092 0.042"/>
      </geometry>
      <origin xyz="0 0 0.015"/>
    </collision>
    <inertial>
      <!-- place the centre of mass in the actual centre of the link (not its origin) -->
      <origin xyz="0 0 0.015"/>
      <mass value="0.3"/>
      <inertia ixx="0.0002557" ixy="0.0" ixz="0.0" iyy="0.0002557" iyz="0.0" izz="0.0004232"/>
    </inertial>
  </link>
  <gazebo reference="base_link">
    <material>Gazebo/Blue</material>
    <selfCollide>false</selfCollide>
  </gazebo>


  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.021" radius="0.015"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.021" radius="0.015"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="7.51875e-06" ixy="0.0" ixz="0.0" iyy="7.51875e-06" iyz="0.0" izz="2.25e-05"/>
    </inertial>
  </link>
  <gazebo reference="left_wheel">
    <material>Gazebo/CoM</material>
    <mu1 value="1.0e+6"/>
    <mu2 value="1.0e+6"/>
    <kp value="1.0e+9"/>
    <kd value="5.0e+6"/>
    <!--
    <mu1 value="200"/>
    <mu2 value="100"/>
    <kp value="10000000.0"/>
    <kd value="1.0"/>
    -->
    <selfCollide>false</selfCollide>
  </gazebo>
  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.021" radius="0.015"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.021" radius="0.015"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="7.51875e-06" ixy="0.0" ixz="0.0" iyy="7.51875e-06" iyz="0.0" izz="2.25e-05"/>
    </inertial>
  </link>
  <gazebo reference="right_wheel">
    <material>Gazebo/CoM</material>
    <mu1 value="1.0e+6"/>
    <mu2 value="1.0e+6"/>
    <kp value="1.0e+9"/>
    <kd value="5.0e+6"/>
    <!--
    <mu1 value="200"/>
    <mu2 value="100"/>
    <kp value="10000000.0"/>
    <kd value="1.0"/>
    -->
    <selfCollide>false</selfCollide>
  </gazebo>
  <link name="castor_frontal_wheel">
    <visual>
      <geometry>
        <sphere radius="0.009"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.009"/>
      </geometry>
      <surface>
        <friction>
        <ode>
            <mu>0</mu>
            <mu2>0</mu2>
            <slip1>1.0</slip1>
            <slip2>1.0</slip2>
        </ode>
        </friction>
    </surface>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="6.48e-06" ixy="0.0" ixz="0.0" iyy="6.48e-06" iyz="0.0" izz="6.48e-06"/>
    </inertial>
  </link>
  <gazebo reference="castor_frontal_wheel">
    <mu1 value="0.0"/>
    <mu2 value="0.0"/>
    <kp value="1.0e+9"/>
    <kd value="5.0e+6"/>
    <material>Gazebo/Black</material>
  </gazebo>
  <joint name="base_to_castor_frontal_wheel" type="fixed">
    <parent link="base_link"/>
    <child link="castor_frontal_wheel"/>
    <origin xyz="0.037 0 -0.006"/>
  </joint>
  <link name="castor_rear_wheel">
    <visual>
      <geometry>
        <sphere radius="0.009"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.009"/>
      </geometry>
      <surface>
        <friction>
        <ode>
            <mu>0</mu>
            <mu2>0</mu2>
            <slip1>1.0</slip1>
            <slip2>1.0</slip2>
        </ode>
        </friction>
    </surface>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="6.48e-06" ixy="0.0" ixz="0.0" iyy="6.48e-06" iyz="0.0" izz="6.48e-06"/>
    </inertial>
  </link>
  <gazebo reference="castor_rear_wheel">
    <mu1 value="0.0"/>
    <mu2 value="0.0"/>
    <kp value="1.0e+9"/>
    <kd value="5.0e+6"/>
    <material>Gazebo/Black</material>
  </gazebo>
  <joint name="base_to_castor_rear_wheel" type="fixed">
    <parent link="base_link"/>
    <child link="castor_rear_wheel"/>
    <origin xyz="-0.037 0 -0.006"/>
  </joint>

  <!-- ################# FINISH CASTORS DEFINITION ############################ -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin rpy="0 1.57079632679 1.57079632679" xyz="0 0.0365 0"/>
    <axis rpy="0 0 0" xyz="0 0 1"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>
  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin rpy="0 1.57079632679 1.57079632679" xyz="0 -0.0365 0"/>
    <axis rpy="0 0 0" xyz="0 0 1"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>
  <!-- <transmission name="left_wheel_joint_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <actuator name="left_wheel_joint_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
    <joint name="left_wheel_joint">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
    </joint>
  </transmission>
  <transmission name="right_wheel_joint_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <actuator name="right_wheel_joint_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
    <joint name="right_wheel_joint">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
    </joint>
  </transmission> -->

  <gazebo>
    <plugin name="joint_states" filename="libgazebo_ros_joint_state_publisher.so">
      <ros>
        <!-- <namespace>/</namespace> -->
          <argument>--ros-args</argument>
          <argument>-r </argument>
          <argument>~/out:=joint_states</argument>
      </ros>
      <update_rate>50</update_rate>
      <joint_name>right_wheel_joint</joint_name>
      <joint_name>left_wheel_joint</joint_name>
    </plugin>

    <plugin name="hoverboard_diff_drive" filename="libgazebo_ros_diff_drive.so">

        <ros>
          <!-- <namespace>/tb3</namespace> -->
        </ros>

      <update_rate>50</update_rate>
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>0.073</wheel_separation>
      <wheel_diameter>0.03</wheel_diameter>
      <command_topic>cmd_vel</command_topic>

      <!-- output -->
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>true</publish_wheel_tf>

      <odometry_topic>odom</odometry_topic>
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_link</robot_base_frame>

      <max_wheel_torque>30</max_wheel_torque>
      <max_wheel_acceleration>1.0</max_wheel_acceleration>
    </plugin>
  </gazebo>
</robot>
